<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.focosee.qingshow.widget.QSImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/nav_btn_back"
            android:onClick="back" />

        <com.focosee.qingshow.widget.QSTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="百搭秀场"
            android:textSize="18sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="2dp"
        android:background="@color/hint_text_color" />

    <com.focosee.qingshow.widget.S21mListview
        android:id="@+id/s21_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:listSelector="#00000000"
        ></com.focosee.qingshow.widget.S21mListview>

    <com.focosee.qingshow.widget.QSButton
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/master_pink"
        android:padding="10dp"
        android:text="开始搭配"
        android:textColor="@color/white"
        android:textSize="20sp" />
</LinearLayout>