<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="产品详情"
                android:textSize="@dimen/text_size" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"

                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/s11_details_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_size_small" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/s11_details_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/s11_details_maxprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <LinearLayout
            android:id="@+id/s11_details_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="10dp"
                android:text="颜色"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/s11_details_color_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/text_size" />
        </LinearLayout>

        <View
            android:id="@+id/s11_details_color_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <FrameLayout
            android:id="@+id/s11_details_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/cate_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:text="鞋码"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/shoe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入鞋码"
                    android:background="@null"
                    android:inputType="number"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cate_023"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/box"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/category_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="上身数值"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(请正确填写以下数值，我们会为您选择合适的尺码)"
                        android:textSize="13sp" />
                </LinearLayout>

                <android.support.percent.PercentRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:layout_below="@id/box">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/home_gray_background"/>
                    <LinearLayout
                        android:id="@+id/num_one_layout"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/num_one"
                            android:layout_marginLeft="10dp"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/text_color"
                            android:text="胸围："/>

                        <EditText
                            android:id="@+id/num_one"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="请填写胸围"
                            android:inputType="number"
                            android:background="@null"
                            android:textSize="16sp"
                            android:textColorHint="@color/text_color"
                            android:layout_alignParentTop="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="5dp"
                            android:text="cm"/>
                    </LinearLayout>
                    <View
                        android:layout_below="@+id/num_one_layout"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/home_gray_background"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:gravity="center_vertical"
                        android:layout_below="@id/num_one_layout">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/num_one"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="10dp"
                            android:text="肩宽："/>
                        <EditText
                            android:id="@+id/num_tow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:textColorHint="@color/text_color"
                            android:background="@null"
                            android:hint="请填写肩宽"
                            android:textSize="@dimen/text_size" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/text_color"
                            android:layout_marginLeft="5dp"
                            android:text="cm"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/size_img"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/white"
                        android:layout_marginRight="20dp"
                        android:src="@drawable/category_shangyi" />
                </android.support.percent.PercentRelativeLayout>
            </RelativeLayout>
        </FrameLayout>

        <View
            android:id="@+id/s11_details_size_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="选择数量"
                android:textSize="@dimen/text_size" />

            <Button
                android:id="@+id/S11_cut_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:background="@drawable/s11_cut_button" />

            <TextView
                android:id="@+id/S11_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/kuang"
                android:gravity="center"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/S11_add_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/s11_add_button" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>