<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/desImg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        app:actualImageScaleType="fitCenter"
        app:roundedCornerRadius="5dp"
        app:roundingBorderColor="@color/master_blue"
        app:roundingBorderWidth="1dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <com.focosee.qingshow.widget.QSTextView
            android:id="@+id/s11_details_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/master_blue"
            android:textSize="16sp" />

        <com.focosee.qingshow.widget.QSTextView
            android:id="@+id/s11_details_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/props"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.focosee.qingshow.widget.QSTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数量:"
                android:textSize="16sp" />

            <com.focosee.qingshow.widget.QSTextView
                android:id="@+id/S11_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
