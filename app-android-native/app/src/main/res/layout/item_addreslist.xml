<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/item_addresslist_choose_btn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@null"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/s11_payment" />

            <LinearLayout
                android:id="@+id/item_addresslist_del_layout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/u02_relativelayout_background"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/item_addresslist_del_img"
                    android:src="@drawable/item_addresslist_del" />

                <com.focosee.qingshow.widget.QSTextView
                    android:id="@+id/item_addresslist_del_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="@string/delete"
                    android:textColor="@color/master_pink"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/item_addresslist_edit_layout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_toLeftOf="@+id/item_addresslist_del_layout"
                android:background="@drawable/u02_relativelayout_background"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/item_addresslist_edit_img"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/item_addresslist_edit" />

                <com.focosee.qingshow.widget.QSTextView
                    android:id="@+id/item_addresslist_edit_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textColor="@color/master_pink"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/item_addresslist_content"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.focosee.qingshow.widget.QSTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_activity_addresslist"
                android:textSize="@dimen/text_size" />

            <com.focosee.qingshow.widget.QSTextView
                android:id="@+id/item_addresslist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <com.focosee.qingshow.widget.QSTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_activity_addresslist"
                android:textSize="@dimen/text_size" />

            <com.focosee.qingshow.widget.QSTextView
                android:id="@+id/item_addresslist_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="@dimen/text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <com.focosee.qingshow.widget.QSTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_activity_addresslist"
                android:textSize="@dimen/text_size" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <com.focosee.qingshow.widget.QSTextView
                android:id="@+id/item_addresslist_province"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="@dimen/text_size" />

            <com.focosee.qingshow.widget.QSTextView
                android:id="@+id/item_addresslist_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text=""
                android:textSize="@dimen/text_size" />
            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_activity_settings"/>

</LinearLayout>
