<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/settingsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/titleBarRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height"
            android:background="@drawable/bg_titlebar">

            <TextView
                android:id="@+id/backTextView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_back_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/settings_activity_settings"
                android:textColor="#454545"
                android:textSize="@dimen/text_size"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/chooseRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#F2F2F2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/choose_picture_activity_settings"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personalRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <com.focosee.qingshow.widget.MRoundImageView
                android:id="@+id/portraitImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:background="@drawable/bg_photpchoose_eg01" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/portraitImageView"
                android:text="@string/personal_picture_activity_settings"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/backgroundRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <com.focosee.qingshow.widget.MRoundImageView
                android:id="@+id/backgroundImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:background="@drawable/bg_photpchoose_eg02" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/backgroundImageView"
                android:text="@string/background_picture_activity_settings"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/baseRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/category_bg_activity_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/information_activity_settings"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nameRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/name_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/nameTextView"
                android:background="@null"
                android:hint="请填写姓名"
                android:singleLine="true"
                android:textColorHint="#C7C7CD" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/sexRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <TextView
                android:id="@+id/sexLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/sex_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sexTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/sexLabel"
                android:background="@null"
                android:textSize="20dp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/ageRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/age_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/ageTextView"
                android:background="@null"
                android:hint="请填写年龄"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="#C7C7CD" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/heightRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <TextView
                android:id="@+id/heightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/height_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/heightEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/heightTextView"
                android:background="@null"
                android:hint="请填写身高"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="#C7C7CD" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/weightRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:visibility="gone">

            <TextView
                android:id="@+id/weightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/weight_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/weightEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/weightTextView"
                android:background="@null"
                android:hint="请填写体重"
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="#C7C7CD" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/hairRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <TextView
                android:id="@+id/hairLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/hair_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/hairTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:editable="false"
                android:enabled="false"
                android:focusable="false"
                android:background="@null"
                android:hint=""
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="#C7C7CD"
                android:layout_toRightOf="@id/hairLabel"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/shoesSizeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <TextView
                android:id="@+id/shoesSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/shoes_size_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/shoesSizeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:editable="false"
                android:enabled="false"
                android:focusable="false"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/shoesSizeTextView"
                android:background="@null"
                android:hint=""
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="#C7C7CD" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/clothesSizeRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <TextView
                android:id="@+id/clothesSizeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/clothes_size_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/clothesSizeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:editable="false"
                android:enabled="false"
                android:focusable="false"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/clothesSizeTextView"
                android:background="@null"
                android:hint=""
                android:inputType="numberDecimal"
                android:singleLine="true"
                android:textColorHint="#C7C7CD" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/brandRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <TextView
                android:id="@+id/brandLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/brand_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/brandTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/brandLabel"
                android:background="@null"
                android:hint="请填写喜欢的品牌"
                android:singleLine="true"
                android:textColorHint="#C7C7CD" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/othersRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/category_bg_activity_settings"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/others_activity_settings"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/changePasswordRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/change_password_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/changeEmailRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/change_email_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/informRelativeLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/inform_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/rulesRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:visibility="gone"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/rules_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:visibility="gone"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/helpRelativeLayout"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/help_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/aboutVIPRelativeLayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/about_vip_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/quitRelativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/bg_activity_settings"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/quitButton"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:background="@drawable/btn_login"
                android:text="退出"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

    </LinearLayout>


</ScrollView>
