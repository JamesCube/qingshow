<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scrollbarStyle="outsideOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/context"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <include layout="@layout/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="12"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/u14_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:background="@color/white"
        android:layout_weight="1"></android.support.v7.widget.RecyclerView>

    </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:alpha="80"
        android:background="#B0000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            style="@style/navigation_btn"
            android:id="@+id/navigation_btn_match"
            android:onClick="onClick"
            android:background="@drawable/root_menu_flash" />

        <TextView
            style="@style/navigation_text"
            android:text="我的搭配" />

        <ImageButton
            style="@style/navigation_btn"
            android:layout_marginTop="30dp"
            android:id="@+id/navigation_btn_good_match"
            android:onClick="onClick"
            android:background="@drawable/root_menu_match" />

        <TextView
            style="@style/navigation_text"
            android:text="美搭榜单" />

        <ImageButton
            style="@style/navigation_btn"
            android:layout_marginTop="30dp"
            android:id="@+id/u01_people"
            android:onClick="onClick"
            android:background="@drawable/root_menu_people" />

        <TextView
            style="@style/navigation_text"
            android:text="我的收藏" />

        <ImageButton
            style="@style/navigation_btn"
            android:id="@+id/s17_settting"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:background="@drawable/root_menu_setting" />

        <TextView
            style="@style/navigation_text"
            android:text="个人设置" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
