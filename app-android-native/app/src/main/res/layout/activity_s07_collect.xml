<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.focosee.qingshow.activity.S07CollectActivity">

    <ImageView
        android:id="@+id/S07_background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_pic"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#77000000">

        <ImageButton
            android:id="@+id/S07_back_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/S07_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="搭配清单"
            android:textColor="#ffffff"
            android:textSize="50px"
            android:layout_marginTop="80dp"/>

        <ListView
            android:id="@+id/S07_item_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/S07_tv"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" >


            </ListView>



    </RelativeLayout>

</RelativeLayout>
