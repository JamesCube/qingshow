<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="480dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@color/top_tow">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cover"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:padding="3dp"
            android:rotation="-3"
            fresco:actualImageScaleType="fitXY"/>

        <ImageView
            android:id="@+id/like"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/top_tow_like" />
        <TextView
            android:id="@+id/like_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/like"
            android:layout_alignBottom="@+id/like"
            android:layout_alignLeft="@+id/like"
            android:layout_alignRight="@+id/like"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:gravity="center"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/top"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/top_tow" />

</RelativeLayout>