<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scrollbarStyle="outsideOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/s01_title_layout"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:src="@drawable/nav_btn_menu_n"
                    android:id="@+id/s01_menu_btn" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_alignTop="@+id/s01_menu_btn"
                    android:layout_alignBottom="@+id/s01_menu_btn"
                    android:layout_centerHorizontal="true">

                    <Button
                        android:id="@+id/s01_tab_hot"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="最热"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/white"
                        android:onClick="onClick"
                        android:background="@drawable/s01_tab_btn1"/>

                    <Button
                        android:id="@+id/s01_tab_new"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="最新"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@+id/s01_tab_hot"
                        android:layout_alignTop="@+id/s01_menu_btn"
                        android:layout_alignBottom="@+id/s01_menu_btn"
                        android:textColor="@color/s21_pink"
                        android:layout_marginLeft="-10dp"
                        android:onClick="onClick"
                        android:background="@drawable/s01_tab_border1"/>
                </LinearLayout>
            </RelativeLayout>

            <com.focosee.qingshow.widget.RecyclerPullToRefreshView
                android:id="@+id/s01_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:layout_below="@+id/s01_title_layout">

            </com.focosee.qingshow.widget.RecyclerPullToRefreshView>
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:alpha="80"
        android:background="#B0000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            style="@style/navigation_btn"
            android:id="@+id/navigation_btn_match"
            android:onClick="onClick"
            android:background="@drawable/root_menu_flash" />

        <TextView
            style="@style/navigation_text"
            android:text="我的搭配" />

        <ImageButton
            style="@style/navigation_btn"
            android:layout_marginTop="30dp"
            android:id="@+id/navigation_btn_good_match"
            android:onClick="onClick"
            android:background="@drawable/root_menu_match" />

        <TextView
            style="@style/navigation_text"
            android:text="美搭榜单" />

        <ImageButton
            style="@style/navigation_btn"
            android:layout_marginTop="30dp"
            android:id="@+id/u01_collection"
            android:onClick="onClick"
            android:background="@drawable/root_menu_people" />

        <TextView
            style="@style/navigation_text"
            android:text="我的收藏" />

        <ImageButton
            style="@style/navigation_btn"
            android:id="@+id/s17_settting"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:background="@drawable/root_menu_setting" />

        <TextView
            style="@style/navigation_text"
            android:text="个人设置" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>

