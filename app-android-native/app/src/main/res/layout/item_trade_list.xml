<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_tradeno_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="3"
            android:singleLine="true"
            android:text="@string/trade_num_text"
            android:textColor="@color/pink"
            android:visibility="invisible"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_tradelist_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/item_tradeno_text"
            android:layout_weight="4"
            android:singleLine="true"
            android:text="12345678"
            android:textColor="@color/pink"
            android:visibility="invisible"
            android:textSize="@dimen/text_size" />

        <View
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/item_tradelist_status"
            android:layout_weight="4"
            android:singleLine="true"
            android:text="@string/trade_type_text"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_tradelist_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_weight="4"
            android:singleLine="true"
            android:text="交易完成"
            android:textColor="@color/pink"
            android:textSize="@dimen/text_size" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/p01_text_color_model_height" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:paddingBottom="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <com.focosee.qingshow.widget.MImageView_OriginSize
                android:id="@+id/item_tradelist_image"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0dp"
                android:scaleType="fitStart"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="4"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_tradelist_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="秋冬新款" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/item_tradelist_measurement_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignTop="@+id/item_tradelist_measurement"
                            android:text="@string/trade_measurement"
                            android:textColor="@color/p01_text_color_model_height" />

                        <TextView
                            android:id="@+id/item_tradelist_measurement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/item_tradelist_color"
                            android:layout_alignLeft="@+id/item_tradelist_quantity"
                            android:layout_marginLeft="5dp"
                            android:text="S"
                            android:textColor="@color/p01_text_color_model_height" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/item_tradelist_color_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:text="@string/trade_color"
                            android:textColor="@color/p01_text_color_model_height" />

                        <TextView
                            android:id="@+id/item_tradelist_color"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/item_tradelist_color_left"
                            android:text="黑"
                            android:textColor="@color/p01_text_color_model_height" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/item_tradelist_sku"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"></LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentLeft="true"
                                android:text="@string/trade_count"
                                android:textColor="@color/p01_text_color_model_height" />

                            <TextView
                                android:id="@+id/item_tradelist_quantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/item_tradelist_color"
                                android:layout_alignParentBottom="true"
                                android:layout_marginLeft="5dp"
                                android:text="1件"
                                android:textColor="@color/p01_text_color_model_height" />
                        </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp">

                        <TextView
                            android:id="@+id/item_tradelist_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_toRightOf="@+id/item_tradelist_color"
                            android:text="@string/trade_price"
                            android:textColor="@color/p01_text_color_model_height" />

                        <TextView
                            android:id="@+id/item_tradelist_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/item_tradelist_price_text"
                            android:text="￥350.00"
                            android:textColor="@color/p01_text_color_model_height" />
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/item_tradelist_finish"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="@string/trade_create_date"
                        android:textColor="@color/p01_text_color_model_height" />

                    <TextView
                        android:id="@+id/item_tradelist_createTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="2015-3-1"
                        android:textColor="@color/p01_text_color_model_height" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/trade_finish_date"
                        android:textColor="@color/p01_text_color_model_height" />

                    <TextView
                        android:id="@+id/item_tradelist_finishTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="2015-3-1"
                        android:textColor="@color/p01_text_color_model_height" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/item_tradelist_trading"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/item_tradelist_applyreturn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/item_tradelist_applyreceive"
                    android:background="@drawable/tradelist_btn"
                    android:text="@string/apply_return_activity_trade"
                    android:textColor="@color/master"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/item_tradelist_applyreceive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/tradelist_btn"
                    android:text="@string/comfirm_receive_activity_trade"
                    android:textColor="@color/master"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</LinearLayout>
