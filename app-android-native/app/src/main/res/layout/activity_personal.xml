<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.focosee.qingshow.activity.U01PersonalActivity">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/user_bg_default">
        <ImageView
            android:id="@+id/activity_personal_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ImageView
            android:id="@+id/activity_personal_backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/s03_back_btn" />
        <ImageView
            android:id="@+id/settingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/u01_account_btn"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="40dp"
            android:layout_height="wrap_content">

            <com.focosee.qingshow.widget.MRoundImageView
                android:id="@+id/avatorImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/user_head_default"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/avatorImageView"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="#ffffff"
                    android:layout_alignParentTop="true"
                    android:text="21212123" />

                <TextView
                    android:id="@+id/heightAndWeightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_below="@id/nameTextView"
                    android:textSize="@dimen/text_size_small"
                    android:text="33333333" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/indicator_bg_default_activity_personal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/matchRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1"
                android:background="@color/indicator_bg_chosen_activity_personal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/likeCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="收藏"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/watchRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recommendCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="推荐"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/u01_line_toleftRecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="#99ffffff"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/fansRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/followedCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="关注"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/u01_line_toleftAttention"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="#99ffffff"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/brandRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/brandCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="店铺"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/u01_line_toleftBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="25dp"
                        android:background="#99ffffff"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/personalViewPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"></android.support.v4.view.ViewPager>

</LinearLayout>
