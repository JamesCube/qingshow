<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/s01_sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scrollbarStyle="outsideOverlay"
    tools:context="com.focosee.focosee.activity.S01HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:id="@+id/s01_FrameLa_right">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/s01_show_relative"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/S01_navigation"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/S01_title_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:src="@drawable/nav_btn_menu" />

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:src="@drawable/nav_btn_image_logo" />

                    <ImageView
                        android:id="@+id/S01_title_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:src="@drawable/nav_account_btn"/>

                </LinearLayout>

                <com.focosee.qingshow.widget.MPullRefreshMultiColumnListView
                    android:id="@+id/S01_waterfall_content"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_below="@+id/S01_navigation"
                    android:layout_weight="1"
                    android:background="#f2f2f2"
                    android:minHeight="20dp"></com.focosee.qingshow.widget.MPullRefreshMultiColumnListView>
            </RelativeLayout>

            <ImageView
                android:id="@+id/s01_switch_right_background"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:visibility="invisible" />
        </FrameLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/s01_FrameLa_left"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:gravity="center_vertical">


        <LinearLayout
            android:id="@+id/S01_pop_menu"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:alpha="50"
            android:background="#000000"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">


            <ImageView
                android:id="@+id/S01_nav_icon_flash"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/root_menu_flash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="闪点推荐"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/S01_nav_icon_brand"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/root_menu_brand" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="品牌商户"
                android:textColor="#ffffffff" />

            <ImageView
                android:id="@+id/S01_nav_icon_design"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/root_menu_design" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="潮流时尚"
                android:textColor="#ffffffff" />


            <ImageView
                android:id="@+id/S01_nav_icon_match"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/root_menu_match" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="美搭榜单"
                android:textColor="#ffffffff" />


            <ImageView
                android:id="@+id/S01_nav_icon_people"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/root_menu_people" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="人气用户"
                android:textColor="#ffffffff" />





        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>

