<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.focosee.qingshow.activity.S05ItemActivity">

    <com.focosee.qingshow.widget.MVerticalViewPager
        android:id="@+id/S05_view_pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

    <ImageButton
        android:id="@+id/S05_back_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/icon_close"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="#99000000"
        android:gravity="center_vertical">

        <com.focosee.qingshow.widget.MCircularImageView
            android:id="@+id/S05_portrait"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"/>

        <LinearLayout
            android:layout_toRightOf="@+id/S05_portrait"
            android:layout_toLeftOf="@+id/S05_buy_btn"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/S05_item_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="45px"
                android:textColor="#ffffff"
                android:text="高领修身羽绒服"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/S05_origin_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35px"
                    android:textColor="#ffffff"
                    android:text="￥360.00">
                </TextView>

                <TextView
                    android:id="@+id/S05_now_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="35px"
                    android:textColor="#ffffff"
                    android:text="￥169.00"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/S05_buy_btn"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:background="#ff6020"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="在线商店"/>

    </RelativeLayout>
    
</RelativeLayout>
