<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:orientation="horizontal">

            <com.focosee.qingshow.widget.QSTextView
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货信息"
                android:textSize="@dimen/text_size" />

            <com.focosee.qingshow.widget.QSButton
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColor="@color/master_pink"
                app:clickGround="@drawable/round_btn_background"
                android:background="@drawable/pinck_btn_radio"
                android:gravity="center"
                android:text="管理地址"
                android:id="@+id/s11_receipt_manage"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.focosee.qingshow.widget.QSTextView
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人姓名："
                android:textSize="@dimen/text_size_small" />

            <com.focosee.qingshow.widget.QSEditText
                android:textSize="@dimen/text_size_small"
                android:id="@+id/s11_receipt_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.focosee.qingshow.widget.QSTextView
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人电话："
                android:textSize="@dimen/text_size_small" />

            <com.focosee.qingshow.widget.QSEditText
                android:textSize="@dimen/text_size_small"
                android:id="@+id/s11_receipt_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:numeric="integer"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.focosee.qingshow.widget.QSTextView
                android:id="@+id/s11_receipt_province"
                android:paddingLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:hint="选择地区"
                android:textColor="@color/master_pink" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <com.focosee.qingshow.widget.QSEditText
                android:paddingLeft="10dp"
                android:textSize="@dimen/text_size_small"
                android:id="@+id/s11_receipt_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:hint="请输入详细地址"
                />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>