<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.focosee.qingshow.activity.P03BrandListActivity">

    <LinearLayout
        android:id="@+id/P03_title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="12"
        android:orientation="horizontal"
        android:background="@drawable/bg_titlebar">

        <ImageView
            android:id="@+id/P03_back_image_button"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:layout_weight="5"
            android:background="#00000000"
            android:src="@drawable/btn_back_default" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:gravity="center"
            android:text="品牌专区"
            android:textColor="#454545"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="#454545"
            android:textSize="@dimen/text_size" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

    <com.focosee.qingshow.widget.MPullRefreshListView
        android:id="@+id/P03_brand_list_list_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></com.focosee.qingshow.widget.MPullRefreshListView>

    <LinearLayout
        android:id="@+id/P03_brand_list_tab_control"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#e5e5e5"
        android:visibility="gone">

        <Button
            android:id="@+id/P03_brand_list_online_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/p03_control_tab_round_shape"
            android:text="线上商店"
            android:textColor="#000000"
            android:layout_marginRight="5dp"/>

        <Button
            android:id="@+id/P03_brand_list_offline_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/p03_control_tab_round_shape"
            android:text="线下店铺"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>
    </RelativeLayout>

</LinearLayout>
