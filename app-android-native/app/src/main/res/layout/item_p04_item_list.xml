<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/item_p04_item_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.focosee.qingshow.widget.indicator.PageIndicator
            android:id="@+id/item_p04_item_viewGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/p04_info"
            android:layout_gravity="center"
            android:orientation="horizontal" />

        <RelativeLayout
            android:id="@+id/p04_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/show_bottom_shadow">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="30dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/item_p04_item_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ffffff"
                    android:textStyle="italic|bold" />

                <TextView
                    android:id="@+id/item_p04_item_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="面料法兰绒"
                    android:textColor="#ffffff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_p04_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/item_p04_item_source_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text=""
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/item_p04_item_detail_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="#00000000"
                android:paddingBottom="20dp"
                android:src="@drawable/item_cell_buy_button" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>