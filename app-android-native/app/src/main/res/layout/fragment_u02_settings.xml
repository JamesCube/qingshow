<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.focosee.qingshow.activity.fragment.U02SettingsFragment">
    <LinearLayout
        android:id="@+id/titleBarRelativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:layout_weight="12">

        <TextView
            android:id="@+id/backTextView"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_weight="5"
            android:padding="10dp"
            android:text="@string/cancels"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/settings_activity_settings"
            android:textColor="#454545"
            android:textStyle="bold" />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
    <LinearLayout
        android:id="@+id/settingsLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/chooseRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#F2F2F2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/choose_picture_activity_settings"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personalRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <com.focosee.qingshow.widget.MRoundImageView
                android:id="@+id/portraitImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:src="@drawable/user_head_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/portraitImageView"
                android:text="@string/personal_picture_activity_settings"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/backgroundRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff">

            <com.focosee.qingshow.widget.MRoundImageView
                android:id="@+id/backgroundImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:src="@drawable/user_bg_default" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/backgroundImageView"
                android:text="@string/background_picture_activity_settings"
                android:textSize="@dimen/text_size" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/manageRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/category_bg_activity_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/manage_activity_settings"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/tradelistRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/u02_tradelist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/title_name_activity_trade"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/addresslist_RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/u02_addresslist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/title_name_activity_addresslist"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/baseRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/category_bg_activity_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/information_activity_settings"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/nameRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/name_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/nameTextView"
                android:background="@null"
                android:hint="请填写姓名"
                android:singleLine="true"
                android:textColorHint="@color/hint_text_color" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/ageRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/ageTextView"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/age_activity_settings"
                android:textSize="@dimen/text_size" />

            <EditText
                android:id="@+id/ageEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/ageTextView"
                android:background="@null"
                android:hint="请填写年龄"
                android:singleLine="true"
                android:textColorHint="@color/hint_text_color" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

            <RelativeLayout
                android:id="@+id/heightRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_activity_settings"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/heightTextView"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_activity_settings"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:text="@string/height_activity_settings"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/heightEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:layout_toRightOf="@id/heightTextView"
                    android:background="@null"
                    android:hint="请填写身高"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_text_color" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_activity_settings"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/weightRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_activity_settings"
                android:background="#ffffff"
                android:visibility="visible">

                <TextView
                    android:id="@+id/weightTextView"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_activity_settings"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:text="@string/weight_activity_settings"
                    android:textSize="@dimen/text_size" />

                <EditText
                    android:id="@+id/weightEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:layout_toRightOf="@id/weightTextView"
                    android:background="@null"
                    android:hint="请填写体重"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textColorHint="#C7C7CD" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_activity_settings" />

            <RelativeLayout
                android:id="@+id/bodyTypeRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_activity_settings"
                android:background="#ffffff"
                android:visibility="visible">

                <TextView
                    android:id="@+id/bodyTypeLabel"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_activity_settings"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:text="@string/bodyType_activity_settings"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/bodyTypeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:layout_toRightOf="@id/bodyTypeLabel"
                    android:background="@null"
                    android:textSize="20dp" />
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_activity_settings" />

            <RelativeLayout
                android:id="@+id/wearStyleEelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_activity_settings"
                android:background="#ffffff"
                android:visibility="visible">

                <TextView
                    android:id="@+id/wearStyleEextView"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_activity_settings"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:text="@string/wearStyle_activity_settings"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/wearStyleEditText"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_activity_settings"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:hint="请填选择穿衣风格"
                    android:textSize="@dimen/text_size"
                    android:layout_toRightOf="@+id/wearStyleEextView"
                    android:textColorHint="#C7C7CD" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_activity_settings" />

            <RelativeLayout
                android:id="@+id/effectEelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height_activity_settings"
                android:background="#ffffff"
                android:visibility="visible">

                <TextView
                    android:id="@+id/effectEextView"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/margin_left_activity_settings"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:text="@string/effect_activity_settings"
                    android:textSize="@dimen/text_size" />
                <TextView
                    android:id="@+id/effectEditText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/margin_right_activity_settings"
                    android:hint="请填选择搭配效果"
                    android:textColorHint="#C7C7CD"
                    android:layout_toRightOf="@id/effectEextView"/>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line_activity_settings" />

        <RelativeLayout
        android:id="@+id/sexRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_activity_settings"
        android:background="#ffffff">

            <TextView
                android:id="@+id/sexLabel"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/sex_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:id="@+id/sexTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:layout_toRightOf="@id/sexLabel"
                android:background="@null"
                android:textSize="20dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/othersRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/category_bg_activity_settings"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/others_activity_settings"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/changePasswordRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:background="#ffffff"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/u02_change_pw_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_left_activity_settings"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:text="@string/change_password_activity_settings"
                android:textSize="@dimen/text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_right_activity_settings"
                android:background="@drawable/icon_arrow" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_activity_settings" />

        <RelativeLayout
            android:id="@+id/quitRelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bg_activity_settings"
            android:gravity="center">

            <Button
                android:id="@+id/quitButton"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="20dp"
                android:background="@drawable/gray_btn"
                android:text="退出登陆"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size" />
        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</LinearLayout>
