<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:scrollbarStyle="outsideOverlay">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/context"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:background="#00000000"
                    android:padding="10dp"
                    android:src="@drawable/nav_btn_menu_n" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="美搭榜单"
                    android:textColor="#454545"
                    android:textStyle="bold" />
            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/s17_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>

    <ImageView
        android:id="@+id/blur"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/navigation"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:alpha="80"
        android:background="#B0000000"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            style="@style/navigation_btn"
            android:id="@+id/navigation_btn_match"
            android:onClick="onClick"
            android:background="@drawable/root_menu_flash" />

        <TextView
            style="@style/navigation_text"
            android:text="我的搭配" />

        <ImageButton
            style="@style/navigation_btn"
            android:layout_marginTop="30dp"
            android:id="@+id/navigation_btn_good_match"
            android:onClick="onClick"
            android:background="@drawable/root_menu_match" />

        <TextView
            style="@style/navigation_text"
            android:text="美搭榜单" />

        <ImageButton
            style="@style/navigation_btn"
            android:layout_marginTop="30dp"
            android:id="@+id/u01_people"
            android:onClick="onClick"
            android:background="@drawable/root_menu_people" />

        <TextView
            style="@style/navigation_text"
            android:text="我的收藏" />

        <ImageButton
            style="@style/navigation_btn"
            android:id="@+id/s17_settting"
            android:layout_marginTop="30dp"
            android:onClick="onClick"
            android:background="@drawable/root_menu_setting" />

        <TextView
            style="@style/navigation_text"
            android:text="个人设置" />
    </LinearLayout>
</android.support.v4.widget.DrawerLayout>