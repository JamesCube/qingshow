<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/S08_title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_titlebar"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/return_back_image_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#00000000"
            android:padding="10dp"
            android:src="@drawable/btn_back_default" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/title_name_activity_return"
            android:textColor="#454545"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/person_addresslist_btn_address"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" />
    </LinearLayout>
    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/calendar_view_return_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/address_activity_return"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/address_return_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="上海市普陀区中山北路2438号13楼B座"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/p01_text_color_model_height" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/receiver_activity_return"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/receiver_return_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="上海市品聚网络科技有限公司"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/p01_text_color_model_height" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_activity_return"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:id="@+id/phone_return_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="021-64269853"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size_small" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/p01_text_color_model_height" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/matters_activity_return"
                    android:textColor="@color/p01_text_color_model_height" />

                <TextView
                    android:id="@+id/matters_return_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="我们支持七日无理由退货，如果亲们发现宝贝不合适，请七日内用快递将商品完好地退回"
                    android:textColor="@color/p01_text_color_model_height" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:text="@string/info_title_activity_return"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/p01_text_color_model_height" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_expressage_activity_return"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/company_return_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="请填写货运公司"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/p01_text_color_model_height" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_expressNO_activity_return"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size" />

                    <EditText
                        android:id="@+id/returnNumber__return_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="请填写货运单号"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/p01_text_color_model_height" />

                <LinearLayout
                    android:id="@+id/returnDate_layout_return_activity"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/info_expressDate_activity_return"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/returnDate__return_activity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="请选择日期"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size" />

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1px"
                    android:background="@color/p01_text_color_model_height" />


            </LinearLayout>

            <TextView
                android:id="@+id/apply_return_btn_return_activity"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height_activity_settings"
                android:background="@drawable/bg_trade_service_phone"
                android:gravity="center"
                android:text="@string/sure_btn_activity_return"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
