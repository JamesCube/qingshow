<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation"
    android:layout_width="140dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#30000000"
    android:gravity="center"
    android:orientation="vertical">

    <ImageButton
        style="@style/navigation_btn"
        android:id="@+id/navigation_btn_match"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_icon_meida" />

    <com.focosee.qingshow.widget.QSTextView
        style="@style/navigation_text"
        android:id="@+id/navigation_btn_match_tv"
        android:text="美搭榜单" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="30dp"
        android:id="@+id/navigation_btn_good_match"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_match" />

    <com.focosee.qingshow.widget.QSTextView
        style="@style/navigation_text"
        android:id="@+id/navigation_btn_good_match_tv"
        android:text="百搭秀场" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="30dp"
        android:id="@+id/navigation_btn_discount"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_discount" />

    <com.focosee.qingshow.widget.QSTextView
        style="@style/navigation_text"
        android:id="@+id/navigation_btn_discount_tv"
        android:text="我要折扣" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="30dp"
        android:id="@+id/u01_people"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_flash" />

    <com.focosee.qingshow.widget.QSTextView
        style="@style/navigation_text"
        android:id="@+id/u01_people_tv"
        android:text="我的搭配" />

    <ImageButton
        style="@style/navigation_btn"
        android:layout_marginTop="30dp"
        android:id="@+id/s17_settting"
        android:onClick="onClick"
        android:background="@null"
        android:src="@drawable/root_menu_setting" />

    <com.focosee.qingshow.widget.QSTextView
        style="@style/navigation_text"
        android:id="@+id/s17_settting_tv"
        android:text="个人设置" />

</LinearLayout>