<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.focosee.qingshow.activity.U01PersonalActivity">

    <com.focosee.qingshow.widget.MViewPager_NoScroll
        android:id="@+id/personalViewPager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"></com.focosee.qingshow.widget.MViewPager_NoScroll>

    <RelativeLayout
        android:id="@+id/U01_head_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/RelativeLayout_height_activity_model">
        <ImageView
            android:id="@+id/activity_personal_background"
            android:layout_width="fill_parent"
            android:scaleType="centerCrop"
            android:layout_height="@dimen/RelativeLayout_height_activity_model"/>

        <ImageView
            android:id="@+id/activity_personal_backTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:padding="10dp"
            android:src="@drawable/s03_back_btn" />
        <ImageView
            android:id="@+id/settingsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/u01_account_btn"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="40dp"
                android:layout_below="@+id/activity_personal_backTextView"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <com.focosee.qingshow.widget.MCircularImageView
                android:id="@+id/avatorImageView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_toRightOf="@id/avatorImageView"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="#ffffff"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/heightAndWeightTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ffffff"
                    android:layout_below="@id/nameTextView"
                    android:textSize="@dimen/text_size_small" />
            </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/indicator_bg_default_activity_personal"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/matchRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1"
                android:background="@color/indicator_bg_chosen_activity_personal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/likeCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/likeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="收藏"
                        android:textColor="@color/darker_gray"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

            </RelativeLayout>




            <RelativeLayout
                android:id="@+id/watchRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recommendCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/recommendTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="推荐"
                        android:textColor="@color/left_menu_text_color"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/u01_line_toleftRecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/line_between_tab"
                        android:background="#99ffffff"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/fansRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/followedCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/followedTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="关注"
                        android:textColor="@color/left_menu_text_color"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/u01_line_toleftAttention"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/line_between_tab"
                        android:background="#99ffffff"
                        android:layout_gravity="center_vertical"/>


                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/brandRelativeLayout"
                android:layout_width="0dp"
                android:layout_height="@dimen/indicator_height_activity_personal"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/brandCountTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textColor="@color/indicator_text_color_default_activity_personal"
                        android:textSize="@dimen/text_size" />

                    <TextView
                        android:id="@+id/brandTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="店铺"
                        android:textColor="@color/left_menu_text_color"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/u01_line_toleftBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent">
                    <View
                        android:layout_width="1dp"
                        android:layout_height="@dimen/line_between_tab"
                        android:background="#99ffffff"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
