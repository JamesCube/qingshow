<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/S08_title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_titlebar"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/person_addresslist_back_image_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/nav_btn_back" />

        <com.focosee.qingshow.widget.QSTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_name_activity_addresslist"
            android:textColor="#454545"
            android:textSize="@dimen/text_size"
            android:textStyle="bold" />

        <com.focosee.qingshow.widget.QSTextView
            android:id="@+id/person_addresslist_btn_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/master_pink"
            android:layout_alignParentRight="true"
            android:padding="10dp"
            android:gravity="center"
            android:text="@string/title_name_activity_addaddress"/>
    </android.support.percent.PercentRelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/person_addresslist_recycleview"
        android:scrollbars="none"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>
