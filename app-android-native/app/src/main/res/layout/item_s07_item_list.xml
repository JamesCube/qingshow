<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:freso="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_s07_collection"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_s07_category"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        freso:placeholderImage="@drawable/user_head_default"/>

    <TextView
        android:id="@+id/item_s07_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_s07_category"
        android:layout_toLeftOf="@+id/item_s07_detail_btn"
        android:gravity="center"
        android:textSize="30px"
        android:textColor="#ffffff"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_centerInParent="true"
        android:text="紫色呢绒大衣"/>

    <Button
        android:id="@+id/item_s07_detail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:text=">"
        android:textSize="30dp"
        android:textColor="#ffffff"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>
</RelativeLayout>