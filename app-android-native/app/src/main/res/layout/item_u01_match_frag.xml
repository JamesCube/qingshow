<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="350dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">
        <android.support.percent.PercentRelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="300dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_u01_match_img"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                app:layout_marginBottomPercent="8%"
                app:layout_marginTopPercent="20%"
                app:layout_heightPercent="72%"
                app:layout_widthPercent="90%"
                fresco:actualImageScaleType="fitXY"
                fresco:placeholderImage="@drawable/root_cell_placehold_image1"/>
            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/item_u01_match_preImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                fresco:actualImageScaleType="fitXY"/>
        </android.support.percent.PercentRelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@+id/item_s01_nikename"
                    android:layout_marginTop="2dp"
                    android:src="@drawable/like"/>
                <TextView
                    android:id="@+id/item_u01_match_likeNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darker_gray"
                    android:layout_marginLeft="5dp"
                    android:textSize="10sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="10dp"
                    android:text="234"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>