<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/news_item_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_show_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher" />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <com.focosee.qingshow.widget.MCircularImageView
            android:id="@+id/item_show_model_image"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_show_love_ll"
            android:layout_toRightOf="@+id/item_show_model_image"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_show_model_name"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="SandyGirl" />

                <TextView
                    android:id="@+id/item_show_model_job"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="设计师" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_show_model_height"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="171 CM" />

                <TextView
                    android:id="@+id/item_show_model_weight"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="45.6 KG" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_show_love_ll"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:src="@drawable/model_cell_icon02_noticeno" />

            <TextView
                android:id="@+id/item_show_love"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="105" />
        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/item_show_model_status"
        android:layout_marginLeft="35dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="每天都需要充足的睡眠"/>

</LinearLayout>