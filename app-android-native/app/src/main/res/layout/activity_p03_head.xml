<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/P03_brand_list_tab_control"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/P03_brand_list_navigation">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e5e5e5"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp">

            <Button
                android:id="@+id/P03_brand_list_online_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/p03_control_tab_round_shape"
                android:text="线上商店"
                android:textColor="#000000" />

            <Button
                android:id="@+id/P03_brand_list_offline_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:background="@drawable/p03_control_tab_round_shape"
                android:text="线下店铺"
                android:textColor="#000000" />

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>