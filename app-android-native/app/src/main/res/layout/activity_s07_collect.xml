<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.focosee.qingshow.activity.S07CollectActivity">

    <ImageView
        android:id="@+id/S07_background_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#99000000">

        <ImageButton
            android:id="@+id/S07_back_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/collect_icon_close"
            android:background="#00000000"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/S07_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="搭配清单"
            android:textColor="#ffffff"
            android:textSize="50px"
            android:layout_marginTop="80dp"/>

        <View
            android:id="@+id/S07_top_line"
            android:layout_below="@+id/S07_tv"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff" />

        <ListView
            android:id="@+id/S07_item_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/S07_top_line"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" ></ListView>

        <View
            android:layout_below="@+id/S07_item_list"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#ffffff" />



    </RelativeLayout>

</RelativeLayout>
