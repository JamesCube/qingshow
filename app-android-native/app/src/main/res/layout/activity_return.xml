<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/S08_title_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg_titlebar"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/S08_back_image_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:padding="10dp"
            android:background="#00000000"
            android:layout_weight="1"
            android:src="@drawable/btn_back_default" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/title_name_activity_return"
            android:textColor="#454545"
            android:textSize="@dimen/text_size"
            android:layout_weight="5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/person_addresslist_btn_address"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height_activity_return"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/darker_gray"
                    android:text="@string/address_activity_return"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/darker_gray"
                    android:text="上海市普陀区中山北路2438号13楼B座"/>

                </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/p01_text_color_model_height"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height_activity_return"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/darker_gray"
                    android:text="@string/receiver_activity_return"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/darker_gray"
                    android:text="上海市品聚网络科技有限公司"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/p01_text_color_model_height"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/item_height_activity_return"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/darker_gray"
                    android:text="@string/phone_activity_return"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/darker_gray"
                    android:text="021-64269853"/>

            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/darker_gray"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/p01_text_color_model_height"
                android:text="@string/matters_activity_return"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/p01_text_color_model_height"
                android:text="我们支持七日无理由退货，如果亲们发现宝贝不合适，请七日内用快递将商品完好地退回"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:paddingBottom="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="@string/info_title_activity_return"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/p01_text_color_model_height"/>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/darker_gray"
                        android:text="@string/info_expressage_activity_return"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/darker_gray"
                        android:text="申通快递"/>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/p01_text_color_model_height"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/darker_gray"
                        android:text="@string/info_expressNO_activity_return"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/darker_gray"
                        android:text="8888888888"/>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/p01_text_color_model_height"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/item_height_activity_return"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/darker_gray"
                        android:text="@string/info_expressDate_activity_return"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/darker_gray"
                        android:text="2015-03-21"/>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/p01_text_color_model_height"/>


                </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/item_height_activity_settings"
            android:gravity="center"
            android:background="@drawable/bg_trade_service_phone"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/sure_btn_activity_return"/>

    </LinearLayout>


</LinearLayout>
