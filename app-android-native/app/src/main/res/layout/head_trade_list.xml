<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/U09_head_layout"
    android:layout_width="fill_parent"
    android:layout_height="120dp"
    android:layout_marginTop="1dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="@color/master_pink"
        android:gravity="center">

        <com.focosee.qingshow.widget.QSTextView
            android:id="@+id/service_textView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="@string/service_text"
            android:textColor="@color/white"
            android:textSize="15dp" />

        <com.focosee.qingshow.widget.QSTextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/service_textView"
            android:gravity="center"
            android:text="@string/service_phone_number"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp"
            android:gravity="center"
            android:layout_alignTop="@+id/s01_menu_btn"
            android:layout_alignBottom="@+id/s01_menu_btn"
            android:layout_centerHorizontal="true">

            <com.focosee.qingshow.widget.QSButton
                android:id="@+id/u09_tab_all"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="申请"
                android:layout_centerHorizontal="true"
                android:textSize="@dimen/text_size"
                android:textColor="@color/white"
                app:clickGround="@color/transparent"
                android:onClick="onClick"
                android:background="@drawable/s01_tab_btn1"/>

            <com.focosee.qingshow.widget.QSButton
                android:id="@+id/u09_tab_running"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:text="成功"
                android:layout_centerHorizontal="true"
                android:layout_toRightOf="@+id/s01_tab_hot"
                android:layout_alignTop="@+id/s01_menu_btn"
                android:layout_alignBottom="@+id/s01_menu_btn"
                android:textColor="@color/master_pink"
                android:layout_marginLeft="-10dp"
                android:onClick="onClick"
                app:clickGround="@color/transparent"
                android:background="@drawable/s01_tab_new_btn_border"/>

            <View
                android:id="@+id/circle_tip"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/circle_tip"
                android:layout_marginLeft="-7dp"
                android:layout_marginTop="-17dp"
                android:visibility="gone" />

        </LinearLayout>


    </android.support.percent.PercentRelativeLayout>

</LinearLayout>